<%= form_for @post do |form| %>
   <%= form.label :title %>:
   <%= form.text_field :title %><br />
   <%= form.label :tag_list, "Tags (separated by commas)" %><br />
   <%= form.text_field :tag_list %>
   <%= form.cktext_area :content, :class => 'someclass', :ckeditor => {:language => 'US'} %>
   <%= form.submit %>
<% end %>